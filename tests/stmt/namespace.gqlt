# namespace can be specified as a slash separated string 
set namespace "animals/dogs"

let { id, name } = query {
	first {
		id
		name
	}
}

assert { id, name } matches { id: "1", name: "Buddy" }

# it can also be specified as an array of strings
# `=` is optional in set
set namespace = ["animals", "dogs", "first"]
set namespace "animals/dogs/first"

let { name } = query {
  id
  name
}
 
assert name == "Buddy"


